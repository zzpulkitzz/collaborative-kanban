{
    "name": "collaborative-kanban",
    "version": "1.0.0",
    "description": "Real-time collaborative Kanban platform",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "type-check": "tsc --noEmit",
        "lint": "echo 'Add ESLint later'"
    },
    "keywords": [
        "kanban",
        "realtime",
        "collaboration",
        "typescript"
    ],
    "author": "Pulkit",
    "license": "MIT",
    "dependencies": {
        "@sendgrid/mail": "^8.1.5",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "redis": "^5.8.2",
        "sequelize": "^6.37.7",
        "socket.io": "^4.8.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/helmet": "^0.0.48",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.3.1",
        "@types/uuid": "^10.0.0",
        "@types/validator": "^13.15.3",
        "concurrently": "^9.2.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    }
}
