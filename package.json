{
    "name": "collaborative-kanban",
    "version": "1.0.0",
    "description": "Real-time collaborative Kanban platform",
    "main": "dist/server.js",
    "scripts": {
      "build": "tsc",
      "start": "node dist/server.js",
      "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
